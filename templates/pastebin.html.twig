{% extends 'partials/base.html.twig' %}


{% block content %}
    <h1>HELLO, ERRORS</h1>
<table>
    <thead>
        <tr>
            <th data-field="paste_title">Title</th>
            <th data-field="paste_author">Author</th>
            <th data-field="paste_created">Created</th>
        </tr>
    </thead>    
    <tbody>
        {{ dump("hello, world") }}
        {% for paste in pastes %}
            {{ dump(paste) }}
            {{ dump("looping") }}
            <tr>
                <td>{{ paste.title }}</td>
                <td>{{ paste.author }}</td>
                <td>{{ paste.date }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
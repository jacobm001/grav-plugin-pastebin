{% extends 'partials/base.html.twig' %}

{% block content %}
    <form method="post" action="{{ base_url_relative ~ uri.path }}">
            {% for field in form.fields %}
                {% if field.type %}
                    <div>
                        {% include ["forms/fields/#{field.type}/#{field.type}.html.twig", 'forms/fields/text/text.html.twig'] %}
                    </div>
                {% endif %}
            {% endfor %}

        <div class="form-actions secondary-accent">
            <button type="submit" class="button primary" name="task" value="pastebin.new">Submit</button>
        </div>

        {{ nonce_field('pastebin-new-form', 'pastebin-new-form-nonce')|raw }}
    </form>
{% endblock %}
